<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".splashscreen.SplashScreenFragment">

    <TextView
        android:id="@+id/tv_title_splash_screen"
        style="@style/TextAppNameSplashScreen"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_version_splash_screen"
        style="@style/TextVersionSplashScreen"
        app:layout_constraintEnd_toEndOf="@+id/tv_title_splash_screen"
        app:layout_constraintStart_toStartOf="@+id/tv_title_splash_screen"
        app:layout_constraintTop_toBottomOf="@+id/tv_title_splash_screen" />

    <TextView
        android:id="@+id/label_title_splash_screen"
        style="@style/TextLabelTitleSplashScreen"
        app:layout_constraintBottom_toTopOf="@+id/label_content_splash_screen"
        app:layout_constraintEnd_toEndOf="@+id/label_content_splash_screen"
        app:layout_constraintStart_toStartOf="@+id/label_content_splash_screen" />

    <TextView
        android:id="@+id/label_content_splash_screen"
        style="@style/TextLabelContentSplashScreen"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>